@model IEnumerable<AirlineManagementSystem.Models.Cities>

@{
    ViewBag.Title = "Cities";
}

<h3>All Cities</h3>
<hr/>
<p>
    @*@Html.ActionLink("Create New", "Create")*@ 
    <a href='@Url.Action("Create", "Cities")' class="btn btn-success">Register</a>
</p>
<table class="table table-bordered table-hover">
    <tr style="background-color:#333333; color:white;">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Airport_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Airport_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td> 
        <td>
             @Html.ActionLink("Edit", "Edit", new { id = item.CityId }, new { @class = "btn btn-warning btn-sm" })  
            @Html.ActionLink("Delete", "Delete", new { id=item.CityId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
